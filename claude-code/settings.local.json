{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/scripts/notify.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": ["Bash(mkdir:*)", "Bash(git add:*)", "Bash(find:*)", "Bash(ls:*)"],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": true
}
